<div class="flash"> 
    <%flash[:message] && flash[:message].each do |m|%>
      <li><%=m%></li>
    <%end%> 

    <%@errors && @errors.each do |m|%>
      <li><%=m%></li>
    <%end%> 

</div>

<h2>Product Profile: <%=@product.name%> </h2><br>
<h4><b>Categories:</b> <%@categories.each do |category|%> <%=category.name%>, <%end%></h4>
    <p><b>Current Inventory:</b><%=@product.inventory%><p>
    <p><b>Source:</b> <%=@product.source%><p>
    <p><b>Cost of Good:</b> <%=@product.cost_of_good%><p>
    <p><b>Retail Price:</b> <%=@product.retail_price%><p>
    <form action="/products/<%=@product.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value=" Delete Product ">   
    </form>
    <a href="/products/<%=@product.id%>/edit"><button>  Edit Product  </button></a>



   